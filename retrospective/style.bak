html {
    -webkit-background-size: cover;
}
html, body {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

a {
    text-decoration: none;
}

div.prewrap {
    display: table;
    width: 100%;
    height: 100%;
}

div.wrap {
    text-align: center;
    vertical-align: middle;
    display: table-cell;
}

div.cr {
    width: 80%;
    background: #222;
    -webkit-box-shadow: 0px 2px 3px #aaa;
    padding: 20px;
    -webkit-border-radius: 8px;

    display: inline-block;
    /* centering */
    text-align: left;
}

div.wrap:after {

    content: "";
    display: inline-block;
    background-size: 150px auto;
    width: 150px;
    height: 160px;
    position: absolute;
    top: 45%;
}

a, div.cr {
    font-family: monospace;
    font-size: 14px;
    color: #aaa;
    text-shadow: 0px 2px 3px #222;
}

